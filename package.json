{
  "name": "@pi-base/core",
  "version": "0.1.1",
  "description": "Shared pi-base data models",
  "keywords": [
    "Node",
    "Math",
    "Topology"
  ],
  "homepage": "https://topology.pi-base.org",
  "bugs": {
    "url": "https://github.com/pi-base/core/issues"
  },
  "license": "MIT",
  "author": "James Dabbs <james.dabbs@gmail.com> (https://jdabbs.com)",
  "files": [
    "lib"
  ],
  "main": "./dist/main.js",
  "types": "./dist/main.d.ts",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pi-base/core.git"
  },
  "scripts": {
    "build": "node ./bin/build",
    "build:declarations": "tsc --emitDeclarationOnly",
    "build:watch": "node ./bin/build --watch",
    "fmt": "pi-base-dev fmt",
    "fmt:check": "pi-base-dev fmt:check",
    "lint": "pi-base-dev lint",
    "lint:check": "pi-base-dev lint:check",
    "test": "jest",
    "test:cov": "jest --coverage",
    "test:watch": "jest --watchAll"
  },
  "dependencies": {
    "remark": "^13.0",
    "remark-rehype": "^8.0.0",
    "unist-util-visit": "^2.0.3"
  },
  "devDependencies": {
    "@pi-base/dev": "^0.0.3",
    "@types/jest": "^26.0.22",
    "@types/node": "^14.14.37",
    "esbuild": "^0.10.2",
    "husky": "^5.2.0",
    "jest": "^26.6.3",
    "jest-circus": "^26.6.3",
    "js-yaml": "^4.0.0",
    "lint-staged": "^10.5.4",
    "pegjs": "^0.10.0",
    "pegjs-jest": "^0.0.2",
    "ts-jest": "^26.5.4",
    "ts-pegjs": "^0.3.1",
    "typescript": "^4.2.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts}": [
      "eslint --cache --fix",
      "prettier --write"
    ],
    "*.{yml,md,json}": "prettier --write"
  }
}